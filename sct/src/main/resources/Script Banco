CREATE ROLE admin LOGIN
  ENCRYPTED PASSWORD 'md5ea909ccfbf42c1d230f26167db4d4fdb'
  NOSUPERUSER INHERIT NOCREATEDB NOCREATEROLE NOREPLICATION;


CREATE DATABASE sct
  WITH OWNER = admin
       ENCODING = 'UTF8'
       TABLESPACE = pg_default
       LC_COLLATE = 'pt_BR.UTF8'
       LC_CTYPE = 'pt_BR.UTF8'
       CONNECTION LIMIT = -1;

CREATE SCHEMA sct
  AUTHORIZATION admin;
